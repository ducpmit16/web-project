@using WebSiteSushi.Models;
@model WebSiteSushi.Models.Menu_Detail

@{
    ViewBag.Title = "Update";
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Update Menu Detail Item</h4>
</div>

<div class="modal-body">
    <form enctype="multipart/form-data">
        @Html.HiddenFor(n => n.id_menu_detail)
        <div class="form-group">
            <label for="name_food_detail">Menu Detail Item's Name : </label>
            @Html.TextBoxFor(n => n.name_food_detail, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="price_food_detail">Menu Detail Item's Price : </label>
            @Html.TextBoxFor(n => n.price_food_detail, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="id_menu">Belongs to Menu Item : </label>
            @Html.DropDownListFor(n => n.id_menu, (List<SelectListItem>)ViewBag.listMenu, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="image_food_detail">Menu Detail Item's Image : </label>
            <input type="file" name="photo" class="filestyle" />
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" onclick="UpdateMenuDetail()" data-dismiss="modal">Submit</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>

<script>
    $(document).ready(function () {
        $(":file").filestyle();
    });

    function UpdateMenuDetail() {
        var formData = new FormData($("form")[2]);
        $.ajax({
            url: '@Url.Action("updateMenuDetail", "MenuDetail")',
            type: 'post',
            data: formData,
            cache: false,
            contentType: false,
            processData: false,
            success: function (response) {
                if (response == 'True') {
                    $.ajax({
                        url: '@Url.Action("MenuDetailPartial", "MenuDetail")',
                        type: 'post',
                        success: function (data) {
                            $("#tbl-menu-detail").html("");
                            $("#tbl-menu-detail").html(data);
                            // dinh dang lai <body>
                            $('#add-menu-detail').modal('hide');
                            $('body').removeClass('modal-open');
                            $('.modal-backdrop').remove();
                            $("body").css("padding", "0");
                        }
                    });
                }
            }
        });
    }
</script>
