@model WebSiteSushi.Models.User

@{
    ViewBag.Title = "Sushi Login";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<div id="login-screen">
    @using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        if (@ViewBag.Message != null)
        {
            <div style="border:1px solid red">
                @ViewBag.Message
            </div>
        }
        <div class="form-group">
            @Html.LabelFor(n => n.username, "User name : ")
            @Html.TextBoxFor(n => n.username, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.username)
        </div>
        <div class="form-group">
            @Html.LabelFor(n => n.password, "Password : ")
            @Html.PasswordFor(n => n.password, new { @class = "form-control" })
            @Html.ValidationMessageFor(n => n.password)
        </div>
        <input type="submit" class="btn btn-default" value="Login"/>
        <br />
        <p style="color:red">@ViewBag.status</p>
    }
</div>